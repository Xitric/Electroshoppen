<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@webshopview.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="webshop.presentation.WebshopController">
   <top>    
      <VBox alignment="TOP_CENTER" prefHeight="90.0" prefWidth="440.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="webshopTitleLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="58.0" prefWidth="293.0" text="Electroshoppen" />
                  <Button mnemonicParsing="false" onAction="#cartOnAction" prefWidth="0.0">
                     <graphic>
                        <Label prefHeight="17.0" prefWidth="0.0" text="0">
                           <graphic>
                              <ImageView fitHeight="42.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@cart.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Label>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <HBox id="menuHBox" alignment="TOP_CENTER" prefWidth="440.0">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#homeButtonOnAction" text="Home" />
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#productsButtonOnAction" text="Products" />
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#articlesButtonOnAction" text="Articles" />
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#guidesButtonOnAction" text="Guides" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
