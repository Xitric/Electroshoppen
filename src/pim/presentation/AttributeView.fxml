<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pim.presentation.AttributeController">
   <left>
      <TitledPane maxHeight="1.7976931348623157E308" text="Attributes" BorderPane.alignment="CENTER">
         <content>
            <VBox spacing="8.0">
               <children>
                  <HBox alignment="TOP_CENTER" spacing="16.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addButtonOnAction" text="Add" />
                        <Button mnemonicParsing="false" onAction="#removeButtonOnAction" text="Remove" />
                     </children>
                  </HBox>
                  <ListView fx:id="attributeListView" prefWidth="200.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </content>
      </TitledPane>
   </left>
   <center>
      <VBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="4.0">
               <children>
                  <Label text="ID:" />
                  <Label fx:id="attributeIDLabel" text="noID" />
               </children>
               <padding>
                  <Insets bottom="8.0" top="8.0" />
               </padding>
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="4.0">
               <children>
                  <Label text="Name:" />
                  <TextField fx:id="attributeNameField" />
               </children>
               <padding>
                  <Insets bottom="8.0" top="8.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="4.0">
               <children>
                  <Label text="Default" />
                  <TextField />
                  <Label text="&lt;--TODO" />
               </children>
               <padding>
                  <Insets bottom="8.0" top="8.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="16.0" />
               </VBox.margin>
            </HBox>
            <TitledPane maxHeight="1.7976931348623157E308" text="Legal values" VBox.vgrow="ALWAYS">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ListView HBox.hgrow="ALWAYS" />
                        <VBox alignment="CENTER" spacing="4.0">
                           <children>
                              <Button mnemonicParsing="false" text="Add &gt;&gt;" />
                              <Button mnemonicParsing="false" text="&lt;&lt; Remove" />
                           </children>
                           <HBox.margin>
                              <Insets left="4.0" right="4.0" />
                           </HBox.margin>
                        </VBox>
                        <ListView HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </content>
               <padding>
                  <Insets bottom="8.0" />
               </padding>
            </TitledPane>
            <Button mnemonicParsing="false" text="Save" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
