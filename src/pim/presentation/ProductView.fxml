<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pim.presentation.ProductController">
   <left>
      <TitledPane maxHeight="1.7976931348623157E308" text="Products" BorderPane.alignment="CENTER">
         <content>
            <VBox spacing="8.0">
               <children>
                  <ListView prefWidth="200.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </content>
      </TitledPane>
   </left>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <VBox alignment="BOTTOM_RIGHT">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="4.0">
                     <children>
                        <Label text="ID:" />
                        <Label text="noID" />
                     </children>
                     <padding>
                        <Insets bottom="8.0" top="8.0" />
                     </padding>
                     <VBox.margin>
                        <Insets top="16.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="4.0">
                     <children>
                        <Label text="Name:" />
                        <Label text="noname" />
                     </children>
                     <padding>
                        <Insets bottom="8.0" top="8.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="16.0" />
                     </VBox.margin>
                  </HBox>
                  <TitledPane maxHeight="1.7976931348623157E308" text="Categories" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="8.0" />
                     </padding>
                     <content>
                        <TextArea minHeight="100.0" wrapText="true" />
                     </content>
                  </TitledPane>
                  <TitledPane maxHeight="1.7976931348623157E308" text="Attributes" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="8.0" />
                     </padding>
                     <content>
                        <VBox spacing="8.0">
                           <padding>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </padding>
                        </VBox>
                     </content>
                  </TitledPane>
                  <TitledPane maxHeight="1.7976931348623157E308" text="Tags" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="8.0" />
                     </padding>
                     <content>
                        <TextArea minHeight="100.0" wrapText="true" />
                     </content>
                  </TitledPane>
                  <TitledPane maxHeight="1.7976931348623157E308" text="Images" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="8.0" />
                     </padding>
                     <content>
                        <VBox spacing="8.0">
                           <children>
                              <FlowPane fx:id="productImagePane" hgap="16.0" vgap="16.0" VBox.vgrow="ALWAYS" />
                              <HBox spacing="8.0">
                                 <children>
                                    <TextField HBox.hgrow="ALWAYS" />
                                    <Button mnemonicParsing="false" text="Browse" />
                                 </children>
                              </HBox>
                              <HBox alignment="BOTTOM_RIGHT" spacing="8.0">
                                 <children>
                                    <Button mnemonicParsing="false" text="Upload Image" />
                                    <Button mnemonicParsing="false" text="Cancel" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </TitledPane>
                  <Button mnemonicParsing="false" text="Save" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
